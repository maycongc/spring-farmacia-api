<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.4.xsd">

    <changeSet id="4" author="auto">
        <createTable tableName="permissao">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="key" type="VARCHAR(100)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="nome" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="descricao" type="VARCHAR(255)"/>
            <column name="categoria" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="createdAt" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updatedAt" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="5" author="auto">
        <createTable tableName="grupoUsuario">
            <column name="id" type="BIGSERIAL">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="nome" type="VARCHAR(100)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="descricao" type="VARCHAR(255)"/>
            <column name="createdAt" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updatedAt" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="6" author="auto">
        <createTable tableName="grupoUsuario_permissao">
            <column name="grupoUsuario_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="permissao_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addPrimaryKey tableName="grupoUsuario_permissao" columnNames="grupoUsuario_id,permissao_id" constraintName="pk_grupoUsuario_permissao"/>
        <addForeignKeyConstraint baseTableName="grupoUsuario_permissao" baseColumnNames="grupoUsuario_id" referencedTableName="grupoUsuario" referencedColumnNames="id" constraintName="fk_grupoUsuario_permissao_grupo"/>
        <addForeignKeyConstraint baseTableName="grupoUsuario_permissao" baseColumnNames="permissao_id" referencedTableName="permissao" referencedColumnNames="id" constraintName="fk_grupoUsuario_permissao_permissao"/>
    </changeSet>

    <changeSet id="7" author="auto">
        <createTable tableName="usuario_grupoUsuario">
            <column name="usuario_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="grupoUsuario_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addPrimaryKey tableName="usuario_grupoUsuario" columnNames="usuario_id,grupoUsuario_id" constraintName="pk_usuario_grupoUsuario"/>
        <addForeignKeyConstraint baseTableName="usuario_grupoUsuario" baseColumnNames="usuario_id" referencedTableName="usuario" referencedColumnNames="id" constraintName="fk_usuario_grupoUsuario_usuario"/>
        <addForeignKeyConstraint baseTableName="usuario_grupoUsuario" baseColumnNames="grupoUsuario_id" referencedTableName="grupoUsuario" referencedColumnNames="id" constraintName="fk_usuario_grupoUsuario_grupo"/>
    </changeSet>

    <changeSet id="8" author="auto">
        <createTable tableName="usuario_permissao">
            <column name="usuario_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="permissao_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addPrimaryKey tableName="usuario_permissao" columnNames="usuario_id,permissao_id" constraintName="pk_usuario_permissao"/>
        <addForeignKeyConstraint baseTableName="usuario_permissao" baseColumnNames="usuario_id" referencedTableName="usuario" referencedColumnNames="id" constraintName="fk_usuario_permissao_usuario"/>
        <addForeignKeyConstraint baseTableName="usuario_permissao" baseColumnNames="permissao_id" referencedTableName="permissao" referencedColumnNames="id" constraintName="fk_usuario_permissao_permissao"/>
    </changeSet>
</databaseChangeLog>
